blueprint:
  name: Exterior Lights Power On
  description: Set the correct state/brightness/color for externior lights when powered on via the wall switch
  domain: automation
  input:
    daylight_scene:
      name: Scene to use when it's daylight
      selector:
        action: {}
    evening_scene:
      name: Scene to use when it's evening
      selector:
        action: {}
    late_night_scene:
      name: Scene to use when it's late night
      selector:
        action: {}
    light_target:
      name: Light
      selector:
        target:
          entity:
            domain: light

variables:
  scene_to_activate: !input daylight_scene
  notification_service: notify.mobile_app_myshkin
    
trigger:
  platform: mqtt
  topic: homeassistant/bridge/log
  
condition:
  - condition: or
    conditions:
    - condition: sun
      after: sunset
    - condition: sun
      before: sunrise

action:
  # Actions are scripts so can also be a list of actions
  - service: ""
    data:
      message: "Beautiful sunset!"
  - delay: 0:35
  - service: notify.notify
    data:
      message: "{{ scene_to_activate }}"
