blueprint:
  name: test8
  description: Set the correct state/brightness/color for externior lights when powered on via the wall switch
  domain: automation
  input:
    daylight_scene:
      name: Scene to use when it's daylight
      selector:
        entity:
          domain: scene
    evening_scene:
      name: Scene to use when it's evening
      selector:
        entity:
          domain: scene
    late_night_scene:
      name: Scene to use when it's late night
      selector:
        entity:
          domain: scene
    light_target:
      name: Light
      selector:
        target:
          entity:
            domain: light

variables:
  scene_to_activate: !input daylight_scene
    
trigger:
  platform: mqtt
  topic: homeassistant/bridge/log
  
condition:
  - condition: or
    conditions:
    - condition: sun
      after: sunset
    - condition: sun
      before: sunrise

action:
    service: scene.turn_on
    target:
      entity_id: "{{ scene_to_activate }}"
